<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
  <tr>
    <th>Note</th>
    <th>Points</th>
    <th>Max points</th>
    <th>Percent</th>
    <th>Mark</th>
    <th>Subject</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @events.each do |event| %>
      <tr>
        <td><%= event.note %></td>
        <td><%= event.points %></td>
        <td><%= event.max_points %></td>
        <td><%= event.percent %>%</td>
        <td><%= event.mark %></td>
        <td><%= link_to event.subject.name, subject_events_path(event.subject) %></td>
        <td><%= link_to 'Show', subject_event_path(event.subject,event) %></td>
        <td><%= link_to 'Edit', edit_subject_event_path(event.subject,event) %></td>
        <td><%= link_to 'Destroy', [event.subject,event], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>