<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @subject.name %>
</p>

<p>
  <strong>Teacher:</strong>
  <%= @subject.teacher %>
</p>

<table>
  <thead>
  <tr>
    <th>Day</th>
    <th>Note</th>
    <th>Points</th>
    <th>Max points</th>
    <th>Mark</th>
    <th>Subject</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @subject.events.each do |event| %>
      <tr>
        <td><%= event.day %></td>
        <td><%= event.note %></td>
        <td><%= event.points %></td>
        <td><%= event.max_points %></td>
        <td><%= event.mark %></td>
        <td><%= event.subject.name %></td>
        <td><%= link_to 'Show', [@subject, event] %></td>
        <td><%= link_to 'Edit', edit_subject_event_path(@subject, event) %></td>
        <td><%= link_to 'Destroy', [@subject, event], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<table>
  <tbody>
  <tr>
    <th></th>
    <th>Spolu</th>
    <th><%= @subject.points_count %>/<%= @subject.max_points_count %></th>
    <th><%= @subject.percent %>%</th>
    <th><%= @subject.mark %></th>
    <th><%= @subject.name %></th>
    <th colspan="3"></th>
  </tr>
  </tbody>
</table>

<%= link_to 'New Event', new_subject_event_path(@subject) %>

<%= link_to 'Edit', edit_subject_path(@subject) %> |
<%= link_to 'Back', subjects_path %>
